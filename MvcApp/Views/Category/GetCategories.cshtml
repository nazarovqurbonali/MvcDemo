@model List<GetCategoryDto>

<h1>Categories List</h1>
<a asp-action="CreateCategory" style="margin:auto" class="btn btn-primary">Create New Category</a>
<form method="get" asp-action="GetCategories" class="mt-3"></form>
<div style="height: 331px;width: 100%">
    
<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>CreateAt</th>
            <th>UpdateAt</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.CategoryName</td>
                <td>@category.CreateAt</td>
                <td>@category.UpdateAt</td>
                <td>
                    <a asp-action="GetCategoryById" asp-route-categoryId="@category.Id" class="btn btn-info">View</a>
                    <a asp-action="UpdateCategory" asp-route-id="@category.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="RemoveCategory" asp-route-categoryId="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

</div>